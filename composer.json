{
    "name" : "eliepse/writing-exercise-pdf",
    "description" : "Tool to generate exercise with words to write, as a PDF file",
    "type" : "library",
    "license" : "MIT",
    "version" : "1.1.1",
    "authors" : [
        {
            "name" : "Eliepse",
            "email" : "contact@eliepse.fr"
        }
    ],
    "require" : {
        "php" : "^7.3",
        "ext-mbstring" : "*",
        "mpdf/mpdf" : "^8.0"
    },
    "require-dev" : {
        "phpstan/phpstan" : "^0.11.18"
    },
    "autoload" : {
        "psr-4" : {
            "Eliepse\\WritingGrid\\" : "src/"
        }
    },
    "scripts" : {
        "release" : [
            "git checkout master",
            "git merge --ff develop",
            "git checkout develop"
        ],
        "tests" : [
            "@phpstan"
        ],
        "phpstan" : [
            "phpstan analyse --level 7 src"
        ]
    }
}
